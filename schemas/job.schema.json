{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JobSpec",
  "type": "object",
  "properties": {
    "jobId": { "type": "string" },
    "createdAt": { "type": "string", "format": "date-time" },
    "creator": { "type": "string" },
    "input": {},
    "inputType": { "type": "string" },
    "reward": { "type": "string" },
    "rewardCurrency": { "type": "string" },
    "status": { "type": "string", "enum": ["open", "claimed", "completed", "cancelled"] }
  },
  "required": [
    "jobId",
    "createdAt",
    "creator",
    "input",
    "inputType",
    "reward",
    "rewardCurrency",
    "status"
  ]
} 